<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_main"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="7dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">


        <ImageView
            android:id="@+id/foto_capa"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/whitney"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tv_nome_livro"
            tools:text="Title Sample"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold|normal"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/foto_capa"
            android:layout_alignTop="@id/foto_capa"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_autor"
            tools:text="Autor"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nome_livro"
            android:layout_alignStart="@id/tv_nome_livro"
            android:layout_marginEnd="24dp"/>

        <TextView
            android:id="@+id/tv_resenha"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            tools:text=" Resenha Resenha Resenha Resenha Resenha Resenha Resenha Resenha Resenha Resenha Resenha"
            android:layout_below="@id/tv_autor"
            android:layout_alignStart="@id/tv_nome_livro"
            android:layout_toEndOf="@id/foto_capa"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/img_star"
            android:src="@drawable/baseline_star_border_24"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>